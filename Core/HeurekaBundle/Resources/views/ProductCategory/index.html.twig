{% extends '::admin.html.twig' %}

{% block body -%}
    <h1>{%trans%}Product list{% endtrans %}</h1>

    {{ knp_pagination_render(entities)}}
    <table class="records_list table table-striped table-condensed">
        <thead>
            <tr>
                <th>{% trans %}Product{% endtrans %}</th>
                <th>{% trans %}Heureka{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans%}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.product.title }}</td>
                <td>{{ entity.heurekaCategory }}</td>
                <td>
                    <a href="{{ path('heurekaproductcategory_edit', { 'id': entity.id, 'category': category }) }}" class="btn btn-warning btn-xs"><span class="glyphicon glyhicon-edit"></span> {%trans%}Edit{%endtrans%}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(entities)}}
{% endblock %}
